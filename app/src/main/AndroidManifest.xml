<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bsreeinf.jobapp" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PasswordResetActivity"
            android:label="@string/title_activity_password_reset" >
        </activity>
        <activity
            android:name=".RegisterUser"
            android:label="@string/title_activity_register_user" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_jobs" >
        </activity>
        <activity
            android:name=".FilterActivity"
            android:label="@string/title_activity_filter" >
        </activity>
        <activity
            android:name=".JobActivity"
            android:label="@string/title_activity_job" >
        </activity>
        <activity
            android:name=".QuestionnaireActivity"
            android:label="@string/title_activity_questionnaire"
            android:parentActivityName=".JobActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bsreeinf.jobapp.JobActivity" />
        </activity>
    </application>

</manifest>
