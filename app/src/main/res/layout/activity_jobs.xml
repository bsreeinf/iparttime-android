            <TextView
                android:id="@+id/txtTabProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="3dp"
                android:paddingTop="10dp"
                android:text="Profile"
                android:textColor="@color/white"
